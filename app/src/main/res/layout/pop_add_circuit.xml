<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="horizontal"
            android:padding="@dimen/space_10">

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="新增接单线路"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:padding="@dimen/space_3"
                android:src="@mipmap/close" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_10"
            android:background="@color/color_f7f7f7" />

        <LinearLayout
            android:id="@+id/ll_start_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="@dimen/space_15"
                android:layout_height="@dimen/space_15"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/space_4"
                android:src="@drawable/dot_0bc02d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="出发地"
                android:textColor="#1B1B1B" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvStartSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="请选择出发地"
                android:textColor="#868CA2"
                android:visibility="visible" />

            <ImageView
                android:layout_width="@dimen/space_15"
                android:layout_height="@dimen/space_15"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_10"
                android:src="@mipmap/ic_right_jt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/cityGroup"
            android:paddingTop="@dimen/space_10"
            android:paddingBottom="@dimen/space_10"
            android:background="@color/color_f7f7f7"
            />

        <LinearLayout
            android:id="@+id/llEndSiteGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="@dimen/space_15"
                android:layout_height="@dimen/space_15"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/space_4"
                android:src="@drawable/dot_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="目的地"
                android:textColor="#1B1B1B" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvEndSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="请选择目的地"
                android:textColor="#868CA2"
                android:visibility="visible" />

            <ImageView
                android:layout_width="@dimen/space_15"
                android:layout_height="@dimen/space_15"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_10"
                android:src="@mipmap/ic_right_jt" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_10"
            android:background="@color/color_f7f7f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="是否启用路线"
                android:textColor="#1B1B1B"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Switch
                android:id="@+id/ivPush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_10"
                 />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_30"
            android:background="@color/color_f7f7f7" />

        <TextView
            android:id="@+id/tvAddBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0E7CFF"
            android:gravity="center"
            android:paddingTop="@dimen/space_8"
            android:paddingBottom="@dimen/space_8"
            android:text="确定"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>
</RelativeLayout>