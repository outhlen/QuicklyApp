<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar_centre_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f7f7f7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:layout_marginTop="@dimen/space_20"
                android:text="对方司机车牌号"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/color_000000"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_15"
                android:background="#F7F7F7"
                android:orientation="horizontal">

                <EditText
                    android:background="@null"
                    android:id="@+id/etCarNum"
                    android:hint="输入对方车牌号"
                    android:textColor="@color/color_000000"
                    android:textColorHint="@color/color_999999"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:text="发送验证码"
                    android:textColor="#0E7CFF"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:layout_marginTop="@dimen/space_20"
                android:text="司机手机号"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/color_000000"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_15"
                android:background="#F7F7F7"
                android:orientation="horizontal">

                <EditText
                    android:inputType="phone"
                    android:background="@null"
                    android:id="@+id/etPhone"
                    android:hint="请输入中转司机的手机号"
                    android:textColor="@color/color_000000"
                    android:textColorHint="@color/color_999999"
                    android:layout_width="match_parent"
                    android:maxLength="11"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tv_pwd_title"
                    android:text="发送验证码"
                    android:textColor="#0E7CFF"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:layout_marginTop="@dimen/space_20"
                android:text="输入验证码"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/color_000000"
                />

            <com.escort.carriage.android.ui.view.text.CheckSmsFourCodeView
                android:layout_width="match_parent"
                android:layout_marginTop="38dp"
                android:id="@+id/checkSmsCode"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/btn_commit_evalute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_login_btn_bg"
                android:text="确认中转"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>