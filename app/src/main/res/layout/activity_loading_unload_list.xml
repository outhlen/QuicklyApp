<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/color_ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_10">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="装货确认"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tvShowText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="及时进行装货确认，让订单进行更顺畅"
                        android:textColor="#FFA70E"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/ivClose"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:padding="@dimen/space_3"
                        android:src="@mipmap/close" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/color_f7f7f7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_10"
                    android:text="请按流程依次确认"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_ee4646"
                    />

                <LinearLayout
                    android:id="@+id/llTopGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_20"
                    android:paddingBottom="@dimen/space_20"
                    android:paddingLeft="@dimen/space_10"
                    android:paddingRight="@dimen/space_10">

                    <ImageView
                        android:id="@+id/ivItemTopImage"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:src="@drawable/icon_text_zhuang" />

                    <TextView
                        android:id="@+id/tvItemTopContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"
                        android:layout_weight="1"
                        android:text="装货"
                        android:textColor="@color/color_000000" />

                    <TextView
                        android:id="@+id/tvItemTopButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_ffffff"
                        android:paddingTop="@dimen/space_5"
                        android:paddingBottom="@dimen/space_5"
                        android:paddingLeft="@dimen/space_10"
                        android:paddingRight="@dimen/space_10"
                        android:background="@drawable/bg_b_999999_circular"
                        android:text="我已抵达"
                        android:textSize="@dimen/text_size_10"
                        />
                </LinearLayout>

                <com.escort.carriage.android.ui.view.list.FillListView
                    android:id="@+id/fillList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="1dp" />

                <LinearLayout
                    android:id="@+id/llBottomGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_20"
                    android:paddingBottom="@dimen/space_20"
                    android:paddingLeft="@dimen/space_10"
                    android:paddingRight="@dimen/space_10"
                    >

                    <ImageView
                        android:id="@+id/ivItemBottomImage"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:src="@drawable/icon_text_zhuang" />

                    <TextView
                        android:id="@+id/tvBottomContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"
                        android:layout_weight="1"
                        android:text="装货"
                        android:textColor="@color/color_000000" />

                    <TextView
                        android:id="@+id/tvItemBottomButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_ffffff"
                        android:paddingTop="@dimen/space_5"
                        android:paddingBottom="@dimen/space_5"
                        android:paddingLeft="@dimen/space_10"
                        android:paddingRight="@dimen/space_10"
                        android:background="@drawable/bg_b_999999_circular"
                        android:text="我已抵达"
                        android:textSize="@dimen/text_size_10" />
                </LinearLayout>

                <TextView
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="#0E7CFF"
                    android:gravity="center"
                    android:paddingTop="@dimen/space_8"
                    android:paddingBottom="@dimen/space_8"
                    android:text="确定"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/text_size_16" />

            </LinearLayout>

            <View
                android:id="@+id/finishView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/main"
                android:background="#35000000" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>