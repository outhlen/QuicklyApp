<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:padding="@dimen/space_10"
    >

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/space_50"
        android:layout_height="@dimen/space_50"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/tvStartLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_000000"
        android:layout_toRightOf="@+id/ivImage"
        android:layout_marginLeft="@dimen/space_10"
        tools:text="测试数据"
        android:maxLines="1"
        android:textSize="14sp"
        />
    <ImageView
        android:id="@+id/ivLocationImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvStartLocation"
        android:layout_alignTop="@+id/tvStartLocation"
        android:layout_alignBottom="@+id/tvStartLocation"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5"
        android:src="@drawable/img_history_source_right"
        />

    <TextView
        android:id="@+id/tvEndtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_000000"
        android:layout_toRightOf="@+id/ivLocationImage"
        android:layout_alignTop="@+id/tvStartLocation"
        android:layout_alignBottom="@+id/tvStartLocation"
        android:maxLines="1"
        tools:text="测试数据"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEndtLocation"
        android:layout_marginTop="@dimen/space_3"
        android:layout_alignLeft="@+id/tvStartLocation"
        android:textColor="@color/color_000000"
        android:maxLines="1"
        android:textSize="12sp"
        />
    <ImageView
        android:id="@+id/ivLocation"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/home_location_smarl"
        android:layout_below="@+id/tvContent"
        android:layout_alignLeft="@+id/tvContent"
        android:layout_marginTop="@dimen/space_5"
        />

    <TextView
        android:id="@+id/tvMileage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivLocation"
        android:layout_toRightOf="@+id/ivLocation"
        android:maxLines="1"
        android:textSize="10sp"
        tools:text="行驶立场"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_toLeftOf="@+id/tvBidding"
        />
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/color_000000"
        android:layout_below="@+id/ivLocation"
        android:layout_alignLeft="@+id/ivLocation"
        android:layout_marginTop="@dimen/space_6"
        tools:text="2020-01-01 12:12"
        />

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTime"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_ff0000"
        tools:text="￥100000"
        />

</RelativeLayout>