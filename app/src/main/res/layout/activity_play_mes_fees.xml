<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_f7f7f7"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_centre_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:padding="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="押金金额"
            />

        <TextView
            android:id="@+id/tvYjMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ff0000"
            android:gravity="end"
            android:textSize="@dimen/text_size_16"
            tools:text="￥50.00"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:padding="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台信息服务费"
            />

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ff0000"
            android:gravity="end"
            android:textSize="@dimen/text_size_16"
            tools:text="￥50.00"
            />



    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_ffffff"
            android:padding="@dimen/space_10"
            android:visibility="gone"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center_vertical"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保险费用"
        />

        <TextView
                android:id="@+id/tvBxMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff0000"
                android:gravity="end"
                android:textSize="@dimen/text_size_16"
                tools:text="￥50.00"
        />



    </LinearLayout>




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_ffffff"
            android:padding="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center_vertical"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票费用"
        />

        <TextView
                android:id="@+id/tvFpMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff0000"
                android:gravity="end"
                android:textSize="@dimen/text_size_16"
                tools:text="￥50.00"
        />



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10"
        android:text="支付方式"
        android:textColor="@color/color_000000"
        />


    <com.escort.carriage.android.ui.view.list.FillListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:listSelector="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/space_10"
        />


    <TextView
        android:id="@+id/tvToPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/shape_login_btn_bg"
        android:gravity="center"
        android:text="确定支付"
        android:textColor="@color/color_ffffff" />

</LinearLayout>