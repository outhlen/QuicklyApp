<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_top_image_one_btn_templet_image"
        android:layout_width="@dimen/space_x40"
        android:layout_height="@dimen/space_x40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_y20"
        android:scaleType="fitCenter"
        tools:src="@drawable/zhuyi" />

    <TextView
        android:id="@+id/dialog_top_image_one_btn_templet_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/space_x20"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/space_y8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_18"
        tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈 " />

    <Button
        android:id="@+id/dialog_top_image_one_btn_templet_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_y44"
        android:gravity="center"
        android:layout_marginLeft="@dimen/space_x20"
        android:layout_marginRight="@dimen/space_x20"
        android:layout_marginBottom="@dimen/space_y20"
        android:background="@drawable/selector_btn_contract"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_18"
        tools:text="退出" />


</LinearLayout>